import socket
import select
import time

def proxy(ip, port):
    remote= socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    remote.connect((ip, port))

    while True:
        if api.poll():
            data= api.recv()
            if remote.send(data) <= 0:
                break
        
        if remote in select.select([remote], [], [], 0)[0]:
            body= remote.recv(4096)
            if api.send(body) <= 0:
                break

    api.send("done")

