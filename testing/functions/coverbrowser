import requests
import random
import json

def coverbrowser(url):
    user_agent= 'Mozilla/5.0 (Windows NT 10.0; rv:68.0) Gecko/20100101 Firefox/68.0'
    headers= {'User-Agent': user_agent}

    cover_urls = ['https://www.google.com/', 
